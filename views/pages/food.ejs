        <div class="container">

                <div class="row">
                    <h2><%= food[0].name %></h2>
                    <div class="row">
                      <div class="col-sm-3">
                        Kategori:<%=(food[0].category)%>
                      </div>
                      <div class="col-sm-3">
                        Kaç Kişilik:<%-(food[0].cookingPerson)%>
                      </div>
                      <div class="col-sm-3">
                        Hazırlama:<%=(food[0].preTime)%> dk
                      </div>
                      <div class="col-sm-3">
                        Pişirme:<%=(food[0].cookTime)%> dk
                      </div>
                    </div>
                    <hr class="small">
                    <div class="row">
                      <div class="col-md-3">
                        <div class="service-item">
                          <span class="fa-stack fa-4x">
                              <i class="fa fa-circle fa-stack-2x"></i>
                          </span>
                        </div>
                      </div>
                      <div class="col-md-9">
                          <h3>Malzemeler:</h3>
                          <%for(var j=0; j<(food[0].ingredients).length; j++) {%>
                            <div class="checkbox">
                              <label><input type="checkbox" value=""><%= (food[0].ingredients[j]).name %></label>
                            </div>
                           <% } %>
                      </div>
                    </div>
                    <div class="row">
                        <h3>Hazırlanıs:</h3>
                        <%- (food[0].making)%>
                    </div>

            <!-- /.row -->
        </div><br><br><br>
        <% include ../partials/footer %>
        <!-- /.container -->

